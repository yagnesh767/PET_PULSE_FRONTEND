<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.petpulse.viewmodel.AddNewPetViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FAF7F2"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- App Bar -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_back"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add New Pet"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

            <!-- Pet Type -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pet Type"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="24dp"/>

            <Spinner
                android:id="@+id/spSpecies"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/bg_input"
                android:padding="16dp"
                android:layout_marginTop="8dp"/>

            <!-- Pet Photo Section -->
            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/pet_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_paw"/>

                <ImageView
                    android:id="@+id/camera_button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_camera_alt"
                    android:background="@drawable/yellow_circle_bg"
                    android:padding="8dp"
                    android:layout_gravity="bottom|end"/>

            </FrameLayout>

            <!-- Pet Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pet Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="24dp"/>

            <EditText
                android:id="@+id/etPetName"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/bg_input"
                android:hint="Buddy"
                android:text="@={viewModel.petName}"
                android:padding="16dp"
                android:layout_marginTop="8dp"/>

            <!-- Breed -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Breed"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/etBreed"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/bg_input"
                android:hint="Golden Retriever"
                android:text="@={viewModel.breed}"
                android:padding="16dp"
                android:layout_marginTop="8dp"/>

            <!-- Age & Weight -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Age (years)"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                    <EditText
                        android:id="@+id/etAge"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:background="@drawable/bg_input"
                        android:hint="2"
                        android:inputType="number"
                        android:text="@={viewModel.age}"
                        android:padding="16dp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weight (kg)"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                    <EditText
                        android:id="@+id/etWeight"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:background="@drawable/bg_input"
                        android:hint="12"
                        android:inputType="numberDecimal"
                        android:text="@={viewModel.weight}"
                        android:padding="16dp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

            </LinearLayout>

            <!-- Gender -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="16dp"/>

            <RadioGroup
                android:id="@+id/rgGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <RadioButton
                    android:id="@+id/rbMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/rbFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:layout_marginStart="16dp"/>
            </RadioGroup>

            <Button
                android:id="@+id/btnSavePet"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Create Pet Profile"
                android:backgroundTint="@color/brand_yellow"
                android:textColor="@color/black"
                android:layout_marginTop="32dp"/>

        </LinearLayout>
    </ScrollView>
</layout>
