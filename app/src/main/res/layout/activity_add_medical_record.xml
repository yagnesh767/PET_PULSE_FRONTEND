<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F9F6F1">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:background="#FFFFFF"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_simple_arrow_back"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add Medical Record"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Record Type -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Record Type"
                android:textStyle="bold"/>

            <RadioGroup
                android:id="@+id/radioGroupType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
                <RadioButton android:id="@+id/radio_checkup" android:text="Checkup" android:checked="true"/>
                <RadioButton android:id="@+id/radio_illness" android:text="Illness"/>
                <RadioButton android:id="@+id/radio_surgery" android:text="Surgery"/>
                <RadioButton android:id="@+id/radio_allergy" android:text="Allergy"/>
            </RadioGroup>

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>
            <EditText
                android:id="@+id/etCondition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Annual Checkup"
                android:singleLine="true"
                android:background="#FFFFFF"
                android:padding="12dp"
                android:layout_marginTop="8dp"/>

            <!-- Date -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>
            <EditText
                android:id="@+id/date_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Oct 15, 2023"
                android:focusable="false"
                android:background="#FFFFFF"
                android:padding="12dp"
                android:layout_marginTop="8dp"/>

            <!-- Vet Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Veterinarian / Clinic"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>
            <EditText
                android:id="@+id/etVetName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Dr. Smith"
                android:background="#FFFFFF"
                android:padding="12dp"
                android:layout_marginTop="8dp"/>

            <!-- Attachments -->
            <Button
                android:id="@+id/upload_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload File"
                android:background="@drawable/bg_rounded_pill_button"
                android:textColor="#000000"
                android:layout_marginTop="16dp"/>

            <!-- File Preview -->
            <LinearLayout
                android:id="@+id/file_preview_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_dashed_card"
                android:padding="16dp"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/file_preview_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_document"/>

                <TextView
                    android:id="@+id/file_preview_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No file selected"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Save Button -->
    <Button
        android:id="@+id/save_record_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Save Record"
        android:background="@drawable/bg_rounded_pill_button"
        android:textColor="#000000"
        android:layout_margin="16dp"/>

</LinearLayout>