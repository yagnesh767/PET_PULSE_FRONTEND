<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8E1"
    tools:context=".AIVetChatFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        app:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:title="AI Vet Chat" />

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Personalized care for Bella"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="8dp"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/subtitle"
        app:layout_constraintBottom_toTopOf="@+id/inputLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Pet Context Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/petContextCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/white">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/petImageView"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/img_1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/petName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Bella"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        app:layout_constraintStart_toEndOf="@id/petImageView"
                        app:layout_constraintTop_toTopOf="@id/petImageView"
                        app:layout_constraintBottom_toTopOf="@+id/petBreed"/>

                    <TextView
                        android:id="@+id/petBreed"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Golden Retriever • 3 years"
                        android:textAppearance="?attr/textAppearanceBody2"
                        app:layout_constraintStart_toEndOf="@id/petImageView"
                        app:layout_constraintTop_toBottomOf="@id/petName" />

                    <View
                        android:id="@+id/statusIndicator"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/bg_green_dot"
                        app:layout_constraintStart_toEndOf="@id/petImageView"
                        app:layout_constraintTop_toBottomOf="@id/petBreed"
                        app:layout_constraintBottom_toBottomOf="@id/petStatus"/>

                    <TextView
                        android:id="@+id/petStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="Healthy"
                        android:textAppearance="?attr/textAppearanceBody2"
                        app:layout_constraintStart_toEndOf="@id/statusIndicator"
                        app:layout_constraintTop_toTopOf="@id/statusIndicator"
                        app:layout_constraintBottom_toBottomOf="@id/statusIndicator"/>

                    <TextView
                        android:id="@+id/petContextCaption"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Responses are personalized using Bella’s health profile"
                        android:textAppearance="?attr/textAppearanceCaption"
                        android:textColor="@android:color/darker_gray"
                        app:layout_constraintTop_toBottomOf="@id/petImageView"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Chat Area -->
            <LinearLayout
                android:id="@+id/chatContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:minHeight="200dp" />

            <!-- Quick Suggestions -->
            <HorizontalScrollView
                android:id="@+id/suggestionChips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/suggestionChip1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_chip_light"
                        android:padding="12dp"
                        android:text="My pet is not eating"
                        android:textColor="#000000" />

                    <Button
                        android:id="@+id/suggestionChip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_chip_light"
                        android:padding="12dp"
                        android:text="Is this behavior normal?"
                        android:textColor="#000000" />

                    <Button
                        android:id="@+id/suggestionChip3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_chip_light"
                        android:padding="12dp"
                        android:text="Food recommendations"
                        android:textColor="#000000" />

                    <Button
                        android:id="@+id/suggestionChip4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_chip_light"
                        android:padding="12dp"
                        android:text="Vaccination advice"
                        android:textColor="#000000" />

                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Disclaimer -->
    <TextView
        android:id="@+id/disclaimer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="AI guidance is not a medical diagnosis"
        android:textAppearance="?attr/textAppearanceCaption"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/inputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="8dp"/>

    <!-- Input Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/inputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="#FFF8E1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/messageEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="Ask about Bella’s health…"
            android:background="@drawable/background_yellow_tag"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/sendButton"
            android:layout_marginEnd="8dp"/>

        <ImageButton
            android:id="@+id/sendButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_send_button"
            android:src="@drawable/ic_send"
            app:tint="@android:color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
